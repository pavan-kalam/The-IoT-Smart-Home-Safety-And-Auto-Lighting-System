FLASK_SECRET_KEY=your-secret-key-change-in-production-use-random-string-here

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_DATABASE=smart_home_db
POSTGRES_USER=iotuser
POSTGRES_PASSWORD=iotpassword
POSTGRES_PORT=5432

# Email Notification Configuration
# Set EMAIL_ENABLED=true to enable email notifications
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
# Your email address (sender)
EMAIL_SENDER=sender@gmail.com
# Your email password or app-specific password (for Gmail, use App Password)
EMAIL_SENDER_PASSWORD=app-password
# Comma-separated list of recipient email addresses
EMAIL_RECIPIENTS=receiver1@gmail.com, receiver2@gmail.com

# AES Encryption Key (must match ESP32)
# This is a 16-byte key for AES-128 encryption
# Change this to a secure random key in production
ENCRYPTION_KEY=MySecretKey12345